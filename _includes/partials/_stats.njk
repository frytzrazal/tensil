<section class="p-8 bg-dark-green text-mint-cream">
  <div class="max-w-screen-lg grid grid-cols-2 md:grid-cols-4 mx-auto">
    {% for item in stats %}
    <div class="flex flex-col items-center my-8{% if item.value == "0%" %} text-tensil-green{% endif %}">
      <div class="font-heading font-medium text-5xl">{{ item.value }}</div>
      <div class="text-md">{{ item.name }}</div>
    </div>
    {% endfor %}
  </div>
</section>