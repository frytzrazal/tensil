<section class="px-8 py-12">
  <h2 class="text-3xl font-heading mb-8 mx-8 text-center">Others are also asking</h2>
  <ul class="max-w-screen-md mx-auto">
    {% for faq in faqs %}
    <li class="ml-6 relative mb-8
      before:content-[url('/images/bullet.svg')] before:w-6 before:h-6
      before:absolute before:block before:left-[-2rem] before:top-1">
      <h3 class="text-xl font-heading mb-2">{{ faq.question }}</h3>
      <div class="mb-2">
        {{ faq.answer | safe }}
      </div>
    </li>
    {% endfor %}
  </ul>
</section>